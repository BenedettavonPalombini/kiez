
<div class="container">
  <div class="logo-top">
    <%= image_tag "kiez-logo.svg", alt: "KIEZ logo", width: 35 %>
    <h2>Kiez</h2>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-lg-4">
      <div class="container bg-card mt-2 form-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>
            <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "bob@gmail.com",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "••••••",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-default" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
