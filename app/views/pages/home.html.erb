<div class="hbanner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1524813686514-a57563d77965?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2232&q=80);">
  <div class="container">
    <h1><h2>Welcome to <%= current_user.address.split(",")[0]%></h2></h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-default" >
  </div>
</div>

<% @building_user.each do |user| %>
  <div class= "card no-outline">
    <div class= "bcard">
      <div class="row align-items-start">
        <div class="col">
          <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key, class: "image-fluid profile-img", style: "object-fit: cover", alt: "user-picture", crop: :fill, gravity: :face %>
          <% else %>
          <%= image_tag "user.jpg", class: "image-fluid profile-img", style: "object-fit: cover", alt: "user-picture", crop: :fill, gravity: :face %>
          <% end %>
        </div>
        <div class="col">
          <%= "#{user.first_name} #{user.last_name}" %>
        </div>
        <div class="col">
          <%= link_to "Message", conversations_path(user: user), data: { turbo_method: :post}, class: "btn btn-success"  %>
        </div>
      </div>
    </div>
  </div>
<% end %>
