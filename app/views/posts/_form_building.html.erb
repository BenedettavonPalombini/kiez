<div class="row justify-content-center mt-5">
  <div class="col-lg-4">
    <div class="container bg-card mt-2 form-login">
      <h3>New Post in Your Building</h3>
      <%= simple_form_for(@post) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class= "form-inputs">
        <%= f.input :title, placeholder: "I can't find my package" %>
        <%= f.input :content,  :as => :text, placeholder: "If anyone sees an Amazon package for me, please reach out. It was supposed to arrive on Tuesday..."%>
        </div>

        <div class="form-actions m-3 p-2">
          <%= f.button :submit, class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
