<h1>this is the show neighborhood</h1>

<div class="container bg-card text-center mt-5">

  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
  <p><%= post.category %></p>
  <p><%= post.duration %></p>
  <p><%= post.price %></p>
    <br>

  <div class="card card-body h-100">
      <%= cl_image_tag @post.photo.key, class: "w-100 h-100 image-fluid", style: "object-fit: cover", crop: :fill, gravity: :face%> %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>


<%= link_to "edit post", edit_post_path(post) %>
 <%= link_to "All Posts", posts_path(kind_of_post: "neighborhood") %>

</div>
