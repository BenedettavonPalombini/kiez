<div class="page">
  <div class="container bg-card text-center mt-5">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://assets.deutschlandfunk.de/FILE_2a06dd2cb506ad78ebe3d720b3d2fb89/1920x1080.jpg?t=1622298009826);">
    <div class="container">
      <h1><strong>Give a hand?</strong></h1>
      <p>Give somebody in your Kiez a hand</p>
      <div class="btn btn-success"><%= link_to "Make a Post", new_post_path(kind_of_post: "neighborhood") %></div>
        <div class="search-form-control form-group mt-10 justify-content-left" >
            <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a job"
            %>
            <%= submit_tag "Search", class: "btn btn-secondary" %>
            <% end %>
        </div>
    </div>
  </div>
      <% posts.each do |post| %>
        <div class= "card">
          <div class= "bcard card-body ">
            <div class="row align-items-start">
              <div class="col">
                <%# < photo > %>
              </div>
              <div class="col">
                <%= link_to post.title, post_path(post) %>
              </div>
              <div class="col">
                <%= post.category %>
              </div>
            </div>
                <%= post.content %>
          </div>
        </div>
                <% end %>
  </div>
</div>
