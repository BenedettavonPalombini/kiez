<div class="container bg-card text-center">
  <div class="d-flex justify-content-left"><%= image_tag "kiez-logo.svg", alt: "KIEZ logo", width: 35 %></div>
  <h1 class="d-flex justify-content-center"> Inbox </h1>

<% if @conversations.empty? %>
  <p class="d-flex justify-content-center m-3"> You Have No Messages </p>
<% end %>
<% @conversations.each do |conversation| %>
  <div class="w2-container">
    <div class= "card no-outline">
      <div class= "bcard inbox-card cards">
          <div class="row align-items-start">
            <% if conversation.other_users(current_user).empty? %>
              <%= nil %>
            <% else %>
              <div class="photo-and-image">
                <img src="/assets/user-938dfd6c6fcf093ffb05618e924f5002bf57af4fc7074d538a8be787883a9495.jpg" class="card-trip-user avatar-bordered" />
                <h2 class="user-name"><%= link_to conversation.other_users(current_user)[0].first_name, conversation_path(conversation) %> </h2>
              </div>
              <div>
                <p> <%= link_to conversation.messages.last&.content, conversation_path(conversation) %> </p>
              </div>
            <% end  %>
          </div>
      </div>
    </div>
  </div>
<% end %>
